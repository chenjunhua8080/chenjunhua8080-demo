pipeline {
  agent any
  tools {
    'org.jenkinsci.plugins.docker.commons.tools.DockerTool' 'docker-17.05.0-ce'
    maven 'v3.8.6'
  }
//   environment {
//     DOCKER_CERT_PATH = credentials('id-for-a-docker-cred')
//   }
  stages {
    stage('maven') {
      steps {
         sh 'mvn -v'
         sh 'mvn clean package -Dmaven.test.skip=true'
      }
    }
    stage('docker') {
      steps {
        sh 'docker version'
      }
    }
    stage('docker2') {
      steps {
        script{
          docker.withRegistry('hub.docker'){
            def customImage = docker.build("chenjunhua8080-demo/my-image:${env.BUILD_ID}","./jenkins-docker-demo")

            /* Push the container to the custom Registry */
            customImage.push()
          }
        }
      }
    }
  }
}